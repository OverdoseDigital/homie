{% style %}
  #custom-grid-{{ block.id }} {
    background-color: {{ block.settings.bg_color }};
	color: {{ block.settings.text_color }};
  }
{% endstyle %}

<div id="custom-grid-{{ block.id }}" class="custom-grid-v2">
  {%- assign isEmpty = false -%}
  {% if block.settings.image_1 == blank %}
    {%- assign isEmpty = true -%}
  {% endif %}

  {% if block.settings.divider %}<div class="section--divider">{% endif %}

  <div class="page-width custom-image-text-2">
    <div class="feature-row feature-row--small-none">

      <div class="feature-row__item feature-row__callout-image">
        <div class="callout-images {% if isEmpty %}blank-state{% endif %}" data-aos="collection-callout">

          {% if isEmpty %}
            {% for i in (1..5) %}
              {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
              {% if forloop.index == 1 %}
                <div class="callout-image-centered">
              {% endif %}
                <div class="callout-image">
                  {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% if forloop.last %}
                </div>
              {% endif %}
            {% endfor %}
          {% else %}
            <div class="callout-image-centered">
              <div class="callout-image"><img src="{{ block.settings.image_1 | img_url: '1400x' }}" alt="{{ block.settings.image_1.alt | escape }}"></div>
              <div class="callout-image"><img src="{{ block.settings.image_2 | img_url: '1400x' }}" alt="{{ block.settings.image_2.alt | escape }}"></div>
              <div class="callout-image"><img src="{{ block.settings.image_3 | img_url: '1400x' }}" alt="{{ block.settings.image_3.alt | escape }}"></div>
              <div class="callout-image"><img src="{{ block.settings.image_4 | img_url: '1400x' }}" alt="{{ block.settings.image_4.alt | escape }}"></div>
              <div class="callout-image"><img src="{{ block.settings.image_5 | img_url: '1400x' }}" alt="{{ block.settings.image_5.alt | escape }}"></div>
            </div>
          {% endif %}

        </div>
      </div>

      <div class="feature-row__item feature-row__text feature-row__text--{{ block.settings.layout }} feature-row__callout-text larger-text">
        <div class="feature-row__content">
          {% if block.settings.creative_logo %}
            <img class="creative-logo" src="{{ block.settings.creative_logo | img_url: '1400x' }}" alt="{{ block.settings.creative_logo.alt | escape }}">
          {% endif %}
          {% if block.settings.subtitle %}
            <p class="subtitle">{{ block.settings.subtitle }}</p>
          {% endif %}
          {% if block.settings.title != blank %}
            <h2 class="h3">{{ block.settings.title }}</h2>
          {% endif %}
          <div class="rte">
            {% if block.settings.text != blank %}
              <p>{{ block.settings.text }}</p>
            {% endif %}
          </div>
          {% if block.settings.cta_text1 != blank %}
            <a href="{{ block.settings.cta_link1 }}" class="btn">
              {{ block.settings.cta_text1 }}
            </a>
          {% endif %}
        </div>
      </div>

    </div>
  </div>

  {% if block.settings.divider %}</div>{% endif %}
</div>