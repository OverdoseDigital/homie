                        {% for grandchildlink in childlink.links %}
                          <li>
                            <a href="{{ grandchildlink.url }}" class="site-nav__dropdown-link">{{ grandchildlink.title | escape }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="megamenu-images">
    <div class="megamenu-image-1">
      {% if section.settings.megamenu_3_image_1_link != blank %}<a href="{{ section.settings.megamenu_3_image_1_link }}">{% endif %}
      
      {% if section.settings.megamenu_3_image_1 %}
      <img src="{{ section.settings.megamenu_3_image_1 | img_url: 'large' }}" alt="" />
      {% endif %}
      
      {% if section.settings.megamenu_3_image_1_text != blank %}
      <div class="block-text">{{ section.settings.megamenu_3_image_1_text }}</div>
      {% endif %}
      		
      {% if section.settings.megamenu_3_image_1_link != blank %}</a>{% endif %}
    </div>
    <div class="megamenu-image-2">
      {% if section.settings.megamenu_3_image_2_link != blank %}<a href="{{ section.settings.megamenu_3_image_2_link }}">{% endif %}
      
      {% if section.settings.megamenu_3_image_2 %}
      <img src="{{ section.settings.megamenu_3_image_2 | img_url: 'large' }}" alt="" />
      {% endif %}
      
      {% if section.settings.megamenu_3_image_2_text != blank %}
      <div class="block-text">{{ section.settings.megamenu_3_image_2_text }}</div>
      {% endif %}
      		
      {% if section.settings.megamenu_3_image_2_link != blank %}</a>{% endif %}
    </div>
  </div>
</div>