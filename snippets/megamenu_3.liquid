{% unless limit %}
  {%- assign limit = mega_menu_3.links.size -%}
  {%- assign limit = mega_menu_3b.links.size -%}
{% endunless %}
{% unless offset %}
  {%- assign offset = 0 -%}
{% endunless %}

<div class="megamenu-inner">
  <div class="megamenu-wrap">
    <div class="column">
      {% if section.settings.main_megamenu_title_3 != blank %}
      <h3>{{ section.settings.main_megamenu_title_3 }}</h3>
      {% endif %}
      <ul class="site-nav site-navigation medium-down--hide" {% unless disable_aria %} role="navigation" aria-label="Primary"{% endunless %}>
        {% for link in mega_menu_3.links limit: limit offset: offset %}
          {%- assign has_dropdown = false -%}
          {% if link.links != blank %}
            {%- assign has_dropdown = true -%}
          {% endif %}

          <li class="site-nav__item site-nav__expanded-item{% if has_dropdown %} site-nav--has-dropdown{% endif %}{% unless template == 'index' %}{% if link.active %} site-nav--active{% endif %}{% endunless %}" {% if has_dropdown %}aria-haspopup="true"{% endif %}>

            <a href="{{ link.url }}" class="site-nav__link{% if has_dropdown %} site-nav__link--has-dropdown{% endif %}">
              {{ link.title }}
              {% if has_dropdown %}
                <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon--wide icon-chevron-down" viewBox="0 0 28 16"><path d="M1.57 1.59l12.76 12.77L27.1 1.59" stroke-width="2" stroke="#000" fill="none" fill-rule="evenodd"/></svg>
              {% endif %}
            </a>
            {% if has_dropdown %}
              <ul class="site-nav__dropdown text-left">
                {% for childlink in link.links %}
                  {%- assign has_sub_dropdown = false -%}
                  {% if childlink.links != blank %}
                    {%- assign has_sub_dropdown = true -%}
                  {% endif %}

                  <li class="{% if childlink.active %}site-nav--active{% endif %}{% if has_sub_dropdown %} site-nav__deep-dropdown-trigger{% endif %}">
                    <a href="{{ childlink.url }}" class="site-nav__dropdown-link site-nav__dropdown-link--second-level {% if has_sub_dropdown %} site-nav__dropdown-link--has-children{% endif %}">
                      {{ childlink.title | escape }}
                      {% if has_sub_dropdown %}
                        <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon--wide icon-chevron-down" viewBox="0 0 28 16"><path d="M1.57 1.59l12.76 12.77L27.1 1.59" stroke-width="2" stroke="#000" fill="none" fill-rule="evenodd"/></svg>
                      {% endif %}
                    </a>
                    {% if has_sub_dropdown %}
                      <ul class="site-nav__deep-dropdown">
                        {% for grandchildlink in childlink.links %}
                          <li>
                            <a href="{{ grandchildlink.url }}" class="site-nav__dropdown-link">{{ grandchildlink.title | escape }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="column">
      {% if section.settings.main_megamenu_title_3b != blank %}
      <h3>{{ section.settings.main_megamenu_title_3b }}</h3>
      {% endif %}
      <ul class="site-nav site-navigation medium-down--hide" {% unless disable_aria %} role="navigation" aria-label="Primary"{% endunless %}>
