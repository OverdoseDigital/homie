          {% if block.settings.logo_10 != blank %}
          <div class="swiper-slide"><img src="{{ block.settings.logo_10 | img_url: '1400x' }}" alt="{{ block.settings.logo_10.alt | escape }}"></div>
          {% endif %}
          {% if block.settings.logo_11 != blank %}
