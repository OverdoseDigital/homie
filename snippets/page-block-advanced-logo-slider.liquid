          {% if block.settings.logo_12 != blank %}
          <div class="swiper-slide"><img src="{{ block.settings.logo_12 | img_url: '1400x' }}" alt="{{ block.settings.logo_12.alt | escape }}"></div>
          {% endif %}
          {% if block.settings.logo_13 != blank %}
          <div class="swiper-slide"><img src="{{ block.settings.logo_13 | img_url: '1400x' }}" alt="{{ block.settings.logo_13.alt | escape }}"></div>
          {% endif %}
          {% if block.settings.logo_14 != blank %}
          <div class="swiper-slide"><img src="{{ block.settings.logo_14 | img_url: '1400x' }}" alt="{{ block.settings.logo_14.alt | escape }}"></div>
          {% endif %}
          {% if block.settings.logo_15 != blank %}
          <div class="swiper-slide"><img src="{{ block.settings.logo_15 | img_url: '1400x' }}" alt="{{ block.settings.logo_15.alt | escape }}"></div>
          {% endif %}
        </div>
      </div>
      <div class="swiper-button-prev"></div>
